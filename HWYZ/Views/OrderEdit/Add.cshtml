<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="exampleModalLabel">添加商品</h4>
        </div>
        <div class="modal-body">
            <form id="form_edit" action="orderedit/editItem" method="post">
                <input type="hidden" name="OrderId" value="@ViewBag.orderId" />
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">选择商品</span>
                        <input type="hidden" data-select="pr" class="_select" style="width: 100%;" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">商品名称</span>
                        <input type="text" name="ProductName" readonly="readonly" class="form-control" />
                        <input type="hidden" name="ProductId" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">商品编号</span>
                        <input type="text" name="ProductCode" readonly="readonly" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">单价</span>
                        <input type="text" name="Price" readonly="readonly" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">发货数量</span>
                        <input type="text" name="OrderNumber" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">折扣系数</span>
                        <input type="text" name="Discount" readonly="readonly" class="form-control" value="@HWYZ.Context.UserContext.user.Store.Discount" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">金额</span>
                        <input type="text" readonly="readonly" id="pay" class="form-control" value="0" />
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary save">保存</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>
