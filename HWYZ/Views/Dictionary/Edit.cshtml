<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="exampleModalLabel">编辑商品</h4>
        </div>
        <div class="modal-body">
            <form id="form_edit" action="dictionary/editDict" method="post">
                <input type="hidden" name="ID" value="@ViewBag.dict.ID" />
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">名称</span>
                        <input type="text" name="Name" class="form-control" value="@ViewBag.dict.Name"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">编号</span>
                        <input type="text" name="Code" readonly="readonly" class="form-control" value="@ViewBag.dict.Code"/>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary save">保存</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>
