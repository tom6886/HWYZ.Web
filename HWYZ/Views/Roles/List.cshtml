@using HWYZ.Models;

<div class="table-responsive">
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <td style="width: 4%;">序号</td>
                <td>角色名称</td>
                <td>状态</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1;}
            @{
                foreach (GuserRole item in Model)
                {
                <tr>
                    <td class="table-serial">@(i++)</td>
                    <td>@item.RoleName</td>
                    @if (@item.Status == Status.enable)
                    {
                        <td><span class="label label-info label-mini">启用</span></td>
                    }
                    else
                    {
                        <td><span class="label label-danger label-mini">未启用</span></td>
                    }

                    <td data-id="@item.ID">
                        <button class="btn btn-primary btn-xs setRole" data-toggle="modal" data-target="#dlg_edit"><i class="fa fa-pencil"></i></button>
                        <button class="btn btn-danger btn-xs delRole"><i class="fa fa-trash-o "></i></button>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
