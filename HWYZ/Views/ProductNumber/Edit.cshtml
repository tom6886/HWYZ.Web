<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="exampleModalLabel">编辑商品</h4>
        </div>
        <div class="modal-body">
            <form id="form_edit" action="productnumber/editNumber" method="post">
                <input type="hidden" name="ID" value="@ViewBag.product.ID" />
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">商品名称</span>
                        <input type="text" name="ProductName" readonly="readonly" class="form-control"  value="@ViewBag.product.Product.ProductName"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">商品编号</span>
                        <input type="text" name="ProductCode" readonly="readonly" class="form-control"  value="@ViewBag.product.Product.ProductCode"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">单价</span>
                        <input type="text" name="Price" readonly="readonly" class="form-control"   value="@ViewBag.product.Product.Price"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">配置数量</span>
                        <input type="text" name="ProductNumber" class="form-control"   value="@ViewBag.product.ProductNumber"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">线上售价</span>
                        <input type="text" name="OnlinePrice" class="form-control" value="@ViewBag.product.OnlinePrice"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">线下售价</span>
                        <input type="text" name="OfflinePrice" class="form-control" value="@ViewBag.product.OfflinePrice"/>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary save">保存</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        </div>
    </div>
</div>
