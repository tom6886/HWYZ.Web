<div class="panel panel-default">
    <div class="panel-body row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            <form class="form-horizontal" id="form_change" action="password/changePassword" method="post">
                <div class="form-group">
                    <h4>
                        <label class="col-sm-2 control-label" for="ds_host">输入原密码:</label>
                    </h4>
                    <div class="col-sm-4">
                        <input class="form-control" name="oldPass" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <h4>
                        <label class="col-sm-2 control-label" for="ds_host">输入新密码:</label>
                    </h4>
                    <div class="col-sm-4">
                        <input class="form-control" name="newPass" type="password" id="newPass" />
                    </div>
                </div>
                <div class="form-group">
                    <h4>
                        <label class="col-sm-2 control-label" for="ds_host">再次输入新密码:</label>
                    </h4>
                    <div class="col-sm-4">
                        <input class="form-control" name="newPassAgain" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-7">
                        <button type="submit" class="btn btn-info">确定修改</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/Page/password.js")