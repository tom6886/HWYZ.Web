<div class="panel panel-default">
    <div class="panel-body row">
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
            <form class="form-horizontal" id="form_change" action="password/changePassword" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">输入原密码</span>
                        <input type="text" name="oldPass" class="form-control" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">输入新密码</span>
                        <input type="text" name="newPass" class="form-control" type="password" id="newPass" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">再次输入新密码</span>
                        <input type="text" name="newPassAgain" class="form-control" type="password" />
                    </div>
                </div>
                <div class="form-group" style="text-align: right;">
                    <button type="submit" class="btn btn-info">确定修改</button>
                </div>
            </form>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/Page/password.js")