@using Webdiyer.WebControls.Mvc;
@using HWYZ.Models;
@using HWYZ.Context;
@model PagedList<Courier>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <td style="width: 4%;">序号</td>
                <td>送餐员姓名</td>
                <td>送餐员电话</td>
                @if (UserContext.store == null)
                {
                    <td>所属门店</td>
                    <td>门店编号</td>
                    <td>门店负责人</td>
                    <td>门店电话</td>
                }
                <td>添加时间</td>
                <td>状态</td>
                @if (UserContext.store != null)
                {
                    <td>操作</td>
                }
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @{
                foreach (Courier item in Model)
                {
                <tr>
                    <td class="table-serial">@(Model.StartItemIndex + i++)</td>
                    <td>@item.CourierName</td>
                    <td>@item.CourierTel</td>
                    @if (UserContext.store == null)
                    {
                        <td>@item.Store.StoreName</td>
                        <td>@item.Store.StoreCode</td>
                        <td>@item.Store.Presider</td>
                        <td>@item.Store.Tel</td>
                    }
                    <td>@item.CreateTime</td>
                    @if (@item.Status == Status.enable)
                    {
                        <td><span class="label label-info label-mini">在职</span></td>
                    }
                    else
                    {
                        <td><span class="label label-danger label-mini">离职</span></td>
                    }
                    @if (UserContext.store != null)
                    {
                        <td data-id="@item.ID">
                            <button class="btn btn-primary btn-xs editCourier" data-toggle="modal" data-target="#dlg_edit"><i class="fa fa-pencil"></i></button>
                            <button class="btn btn-danger btn-xs delCourier"><i class="fa fa-trash-o "></i></button>
                        </td>
                    }
                </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model != null && Model.TotalPageCount > 1)
{
    <div style="height: 80px">
        <div style="float: left;">
            @Ajax.Pager(Model, new PagerOptions
       {
           CssClass = "pagination",
           ContainerTagName = "ul",
           PageIndexParameterName = "pi",
           CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
           DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
           PagerItemTemplate = "<li>{0}</li>",
           PageIndexBoxId = "pageIndexBox",
           GoToButtonId = "goToBtn"
       }, new MvcAjaxOptions { UpdateTargetId = "unseen", HttpMethod = "Post", DataFormId = "form_query" })
        </div>
        <div class="input-group" style="width: 260px;">
            <div class="input-group" style="margin: 20px;">
                <span class="input-group-addon">转到第</span>
                <input type="text" id="pageIndexBox" class="form-control input-sm" />
                <span class="input-group-addon">页</span>
                <span class="input-group-btn">
                    <button class="btn btn-primary btn-sm" id="goToBtn">跳转</button></span>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $(".delCourier").click(function () {
            if (!confirm("您确定要删除此送餐员？")) { return false; }

            var _this = $(this);

            $.post("couriers/deleteCourier", { courierId: _this.parent().data('id') }, function (r) {
                alert(r.msg);

                if (r.code < 0) {
                    return false;
                }

                $("#form_query").submit();
            });
        });
    });
</script>
