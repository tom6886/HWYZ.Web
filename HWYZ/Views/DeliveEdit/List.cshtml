@using Webdiyer.WebControls.Mvc;
@using HWYZ.Models;
@model PagedList<OrderItem>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <td>商品编码</td>
                <td>商品名称</td>
                <td>发货数量</td>
                <td>单价</td>
                <td>折扣</td>
                <td>金额</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (OrderItem item in Model)
                {
                <tr>
                    <td>@item.ProductCode</td>
                    <td>@item.ProductName</td>
                    <td>@item.RealNumber</td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    @{var pay = @item.Price * @item.RealNumber * @item.Discount;}
                    <td>@pay</td>
                    <td data-id="@item.ID">
                        <a href="javascript:void(0)" class="editItem" data-toggle="modal" data-target="#dlg_edit">编辑</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model != null && Model.TotalPageCount > 1)
{
    <div style="height: 80px">
        <div style="float: left;">
            @Ajax.Pager(Model, new PagerOptions
       {
           CssClass = "pagination",
           ContainerTagName = "ul",
           PageIndexParameterName = "pi",
           CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
           DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
           PagerItemTemplate = "<li>{0}</li>",
           PageIndexBoxId = "pageIndexBox",
           GoToButtonId = "goToBtn"
       }, new MvcAjaxOptions { UpdateTargetId = "unseen", HttpMethod = "Post", DataFormId = "form_query" })
        </div>
        <div class="input-group" style="width: 260px;">
            <div class="input-group" style="margin: 20px;">
                <span class="input-group-addon">转到第</span>
                <input type="text" id="pageIndexBox" class="form-control input-sm" />
                <span class="input-group-addon">页</span>
                <span class="input-group-btn">
                    <button class="btn btn-primary btn-sm" id="goToBtn">跳转</button></span>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $(".delItem").click(function () {
            if (!confirm("您确定要删除此商品？")) { return false; }

            var _this = $(this);

            $.post("orderedit/delItem", { itemId: _this.parent().data('id') }, function (r) {
                alert(r.msg);

                if (r.code < 0) {
                    return false;
                }

                $("#form_query").submit();
            });
        });
    });
</script>
