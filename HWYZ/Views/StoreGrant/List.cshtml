@using Webdiyer.WebControls.Mvc;
@using HWYZ.Models;
@model PagedList<Store>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <td>门店名称</td>
                <td>门店编号</td>
                <td>所属地市</td>
                <td>地址</td>
                <td>门店类型</td>
                <td>负责人</td>
                <td>联系电话</td>
                <td>状态</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Store item in Model)
                {
                <tr>
                    <td>@item.StoreName</td>
                    <td>@item.StoreCode</td>
                    <td>@item.Province @item.City @item.Country</td>
                    <td>@item.Address</td>
                    @if (@item.StoreType == StoreType.JMD)
                    {
                        <td>加盟店</td>
                    }
                    else
                    {
                        <td>配送站</td>
                    }
                    <td>@item.Presider</td>
                    <td>@item.Tel</td>
                    @if (@item.Status == Status.enable)
                    {
                        <td>启用</td>
                    }
                    else
                    {
                        <td>未启用</td>
                    }
                    <td data-id="@item.ID">
                        <a href="javascript:void(0)" class="editStore" data-toggle="modal" data-target="#dlg_edit">编辑</a>
                        |
                        <a href="javascript:void(0)" class="delStore">删除</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="text-right" style="padding: 10px 15px;">
    @if (Model != null && Model.Count > 0)
    {
        @Ajax.Pager(Model, new PagerOptions { CssClass = "table-page", PageIndexParameterName = "pi", CurrentPagerItemWrapperFormatString = "<span class=\"active\">{0}</span>", NumericPagerItemWrapperFormatString = "<span>{0}</span>", FirstPageText = "首页&nbsp;&nbsp;", PrevPageText = "前一页", NextPageText = "下一页", LastPageText = "&nbsp;&nbsp;尾页" }, new MvcAjaxOptions { UpdateTargetId = "container", HttpMethod = "Post", DataFormId = "form_query" })
    }
</div>
<script type="text/javascript">
    $(function () {
        $(".delStore").click(function () {
            if (!confirm("您确定要删除此门店？")) { return false; }

            var _this = $(this);

            $.post("storegrant/deleteStore", { storeId: _this.parent().data('id') }, function (r) {
                alert(r.msg);

                if (r.code < 0) {
                    return false;
                }

                $("#form_query").submit();
            });
        });
    });
</script>
